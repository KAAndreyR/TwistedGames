@model TwistedGames.Pages.Shared.GameModel
@{
    Layout = "_Layout";
}


<h2>@ViewData["Header"]</h2>

<div hidden id="game-id">@Model.GameId</div>

@Html.AntiForgeryToken()

<div class="row">
    <div class="col-lg-10 col-md-9 col-sm-12 text-center">
        <partial name="Shared/Game/_GameField" model="Model.GameRepresentation" />
    </div>
    <div class="col-lg-2 col-md-3 col-sm-12 text-center">
        <partial name="Shared/_Joystick" />
    </div>
</div>

@RenderBody()

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/snake.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/snake.css" asp-append-version="true" />
    </environment>
}
@section Scripts {
    <environment include="Development">
        <script src="~/js/snake.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/snake.js" asp-append-version="true"></script>
    </environment>
}

